<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
   <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
     <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   <% end %>
   <%= form_with model: @user do |f| %>
    <div class="form-group">
     <%= f.label :name %>
     <%= f.text_field :name, autofocus: true, id:"inputName" , class: 'form-control user_name'%>
    </div>
    <div class="form-group">
     <%= f.label :image %>
     <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" , class: 'form-control-file'%>
    </div>
    <div class="form-group">
     <%= f.label :introduction %>
     <%= f.text_area :introduction , class: 'form-control user_introduction'%>
    </div>
    <%= f.submit "Update User",class:"btn btn-secondary" %>
   <% end %>
   </div>
  </div>
</div>